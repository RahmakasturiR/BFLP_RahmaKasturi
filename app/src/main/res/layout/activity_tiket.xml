<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="32px"
    android:background="#FFEB7F"
    android:gravity="center_horizontal"
    tools:context=".TiketActivity">
    <ImageView
        android:id="@+id/imgQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvUUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="13dp"
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8pt"
        android:background="@drawable/border"
        android:text="Nama"/>
    <TextView
        android:padding="13dp"
        android:background="@drawable/border"
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8pt"
        android:text="Alamat"
        />
    <TextView
        android:padding="13dp"
        android:background="@drawable/border"
        android:id="@+id/tvTglLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8pt"
        android:text="Tanggal"/>
    <TextView
        android:padding="13dp"
        android:background="@drawable/border"
        android:id="@+id/tvTiket"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8pt"
        android:text="Tiket"/>
    <Spinner
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spTiket"
        android:entries="@array/tiket"
        android:padding="15dp">
    </Spinner>
    <TextView
        android:padding="13dp"
        android:background="@drawable/border"
        android:id="@+id/tvHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8pt"
        android:text="Harga"/>
    <Button

        android:id="@+id/btnBeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli"/>

</LinearLayout>